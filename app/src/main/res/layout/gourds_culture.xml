<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--region Арбуз-->

    <ImageView
        android:id="@+id/imageViewWatermelon"
        android:layout_width="328px"
        android:layout_height="284px"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWatermelon"
        android:layout_width="328px"
        android:layout_height="50px"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Арбуз"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWatermelon"
        tools:layout_editor_absoluteX="40dp"
        tools:ignore="MissingConstraints" />


    <!--endregion Арбуз-->

    <!--region Райграс-->

    <ImageView
        android:id="@+id/imageViewMelon"
        android:layout_width="328px"
        android:layout_height="284px"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="208dp"
        android:layout_marginTop="36dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMelon"
        android:layout_width="328px"
        android:layout_height="50px"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Дыня"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMelon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="208dp" />

    <!--endregion Райграс-->

</androidx.constraintlayout.widget.ConstraintLayout>