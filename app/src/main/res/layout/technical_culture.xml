<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--region Хлопчатник-->
    <ImageView
        android:id="@+id/imageViewCotton"
        android:layout_width="328px"
        android:layout_height="284px"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCotton"
        android:layout_width="328px"
        android:layout_height="50px"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Хлопчатник"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCotton"
        tools:layout_editor_absoluteX="28dp"
        tools:ignore="MissingConstraints" />

    <!--endregion Хлопчатник-->

    <!--region Лён-->
    <ImageView
        android:id="@+id/imageViewLinen"
        android:layout_width="328px"
        android:layout_height="284px"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="208dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLinen"
        android:layout_width="328px"
        android:layout_height="50px"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Рапс озимый"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLinen"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="208dp" />

    <!--endregion Лён-->

    <!--region Сахарная свекла-->

    <ImageView
        android:id="@+id/imageViewSugarBeet"
        android:layout_width="328px"
        android:layout_height="284px"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_marginStart="28dp"
        android:layout_marginTop="204dp"
        android:scaleType="centerCrop"
        android:src="@drawable/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSugarBeet"
        android:layout_width="328px"
        android:layout_height="50px"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Рапс яровой"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSugarBeet"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp" />

    <!--endregion Сахарная свекла-->

</androidx.constraintlayout.widget.ConstraintLayout>